{
  "name": "more",
  "version": "1.0.0",
  "description": "MoreOver Real Experience bot",
  "main": "src/main.ts",
  "scripts": {
    "build-ts": "tsc",
    "postinstall": "npm run build-ts",
    "start": "nodemon src/main.ts",
    "test": "mocha",
    "tdd": "mocha --watch --recursive --extension ts -R min",
    "format": "prettier-eslint 'src/**/*.{ts,json}' --write"
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn format",
      "git add --all"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dusaniuk/more.git"
  },
  "keywords": [
    "telegram",
    "bot",
    "more"
  ],
  "author": "Yaroslav Dusaniuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dusaniuk/more/issues"
  },
  "homepage": "https://github.com/dusaniuk/more#readme",
  "dependencies": {
    "dotenv": "^8.0.0",
    "firebase": "^6.3.5",
    "firebase-admin": "^8.3.0",
    "telegraf": "^3.32.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "@types/chai": "^4.1.7",
    "@types/faker": "^4.1.5",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.0",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-chai-expect": "^2.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-mocha": "^6.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "faker": "^4.1.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "prettier-eslint-cli": "^5.0.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
